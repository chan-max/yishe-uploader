{
    "name": "yishe-uploader",
    "version": "2.0.2",
    "description": "Yishe Uploader - 多平台自动发布（抖音、快手、小红书、微博等）",
    "main": "src/index.js",
    "type": "module",
    "scripts": {
        "start": "vite build --config web/vite.config.js && node src/api/server.js",
        "dev": "node src/api/server.js",
        "web:dev": "vite --config web/vite.config.js",
        "web:build": "vite build --config web/vite.config.js",
        "build:exe": "node scripts/build-exe.js",
        "check-login": "node scripts/check-login.js",
        "publish:single": "node scripts/publish-single-product.js",
        "query:single": "node scripts/query-single-product.js",
        "browser:start": "node scripts/start-browser.js"
    },
    "keywords": [
        "social-media",
        "automation",
        "puppeteer",
        "upload",
        "weibo",
        "douyin",
        "xiaohongshu",
        "kuaishou"
    ],
    "author": "Jc",
    "license": "MIT",
    "dependencies": {
        "playwright": "^1.55.0",
        "axios": "^1.10.0",
        "commander": "^12.0.0",
        "chalk": "^5.3.0",
        "ora": "^8.0.1",
        "inquirer": "^9.2.15",
        "fs-extra": "^11.2.0",
        "pinia": "^2.1.7",
        "vue": "^3.4.0",
        "vue-router": "^4.2.5"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^5.0.0",
        "esbuild": "^0.24.0",
        "nexe": "^4.0.0-rc.6",
        "sass": "^1.69.5",
        "semantic-ui-css": "^2.5.0",
        "vite": "^5.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}